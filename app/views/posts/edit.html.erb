<div class="mt-3 ml-3">
  <h1>Edit post</h1>
</div>
<div class="ml-3">
  <form action="/posts/<%= @post.id %>" method="post">
    <div class="form-group">
      <label for="posttitle">Title</label><br>
      <input id="posttitle"type="text" name="title" value="<%= @post.title %>">
    </div>
    <div class="form-group">
      <label for="postcontent">Content</label><br>
      <textarea id="postcontent" name="content" rows="15" cols="120"><%= @post.content %></textarea>
    </div>
    <button type="submit" class="btn btn-link text-dark"><i class="fas fa-sticky-note fa-1x"> Submit</i></button>
    <a class="text-danger ml-3" href="/posts/<%=@post.id%>" role="button"><i class="fas fa-ban"> Cancle</i></a>
    <input type="hidden" name="_method" value="put">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  </form>
</div>

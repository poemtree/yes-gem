<div class="mt-3 ml-3">
  <h1>Create post</h1>
</div>
<div class="ml-3">
  <form action="/posts" method="post">
    <div class="form-group">
      <label for="posttitle">Title</label><br>
      <input id="posttitle"type="text" name="title">
    </div>
    <div class="form-group">
      <label for="postcontent">Content</label><br>
      <textarea id="postcontent" name="content" rows="8" cols="80"></textarea>
    </div>
    <button type="submit" class="btn btn-link text-dark"><i class="fas fa-sticky-note fa-1x"> Submit</i></button>
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  </form>
</div>

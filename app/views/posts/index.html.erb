<div class="mt3 ml3">
  <h1>Posts</h1>
</div>
<div>
  <table class="table table-sm table-hover">
    <thead>
      <tr>
        <th scope="col">No.</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
        <th scope="col">Date</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <th scope="row"><%= post.id %></th>
          <td><%= post.title %></td>
          <td><%= post.content %></td>
          <td><%= post.created_at %></td>
          <td><a href="/posts/<%= post.id %>"><i class="fas fa-edit"></i></a></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div>
  <a class="text-dark" href="/posts/new" role="button"><i class="fas fa-plus-circle">New post</i></a>
</div>

<div class="row align-items-center">
  <div class="col-7">
    <h3><%= @post.id %>. <%= @post.title %></h3>
  </div>
  <div class="col-3">
    <a href="/" class="text-dark"><i class="fas fa-undo-alt"> Back</i></a>
  </div>
</div>
<div class="ml-1">
  <textarea readonly rows="15" cols="120"><%= @post.content %></textarea>
  <div class="row align-tiems-center">
    <div class="col-3">
      <p>Created at : <%= @post.created_at %></p>
    </div>
    <div class="col-4">
      <p>Last updated at : <%= @post.updated_at %></p>
    </div>
  </div>
</div>
<div class="ml-1">
  <%= link_to "<i class='fas fa-edit'> Edit</i>".html_safe, edit_post_path(@post) %>
  <a class="text-info" href="/posts/<%= @post.id %>/edit"><i class="fas fa-edit"> Edit</i></a>
  <%= link_to "<i class='fas fa-trash-alt'> Delete</i>".html_safe, @pst, method: :delete, data: {confirm: 'Really?'} %>
  <a class="ml-3 text-danger" href="/posts/<%= @post.id %>" data-method="delete" data-confirm="삭제 하시겠습니까?"><i class="fas fa-trash-alt"> Delete</i></a>
</div>
<div class="mt-3 ml-1">
  <div class="ml-2">
    <h5>Comments</h5>
  </div>
  <div class="ml-2 col-11">
    <table class="table table-sm table-borderless">
      <thead>
        <tr>
          <th scope="col">No.</th>
          <th scope="col">Comment</th>
          <th scope="col">Date</th>
        </tr>
      </thead>
      <tbody>
        <% @comments.each do |comment| %>
          <tr>
            <th scope="row"><%= comment.id %></th>
            <td><%= comment.content %></td>
            <td><%= comment.created_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="mt-3 ml-1">
  <form action="/comments/create" method="post">
    <input type="hidden" name="post_id" value="<%= @post.id %>">
    <div class="ml-2 row align-items-center">
      <div class="col">
        <textarea id="postcontent" name="content" rows="1" cols="90"></textarea>
      </div>
      <div class="col">
        <button type="submit" class="btn btn-link text-dark"><i class="fas fa-sticky-note fa-1x"> Submit</i></button>
      </div>
    </div>
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  </form>
</div>
